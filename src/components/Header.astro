---
import { SITE } from '../config';
import SunIcon from './Icons/SunIcon.astro';
import MoonIcon from './Icons/MoonIcon.astro';
import ToolsIcon from './Icons/ToolsIcon.astro';
---

<header>
	<div class="flex items-center justify-between">
		<a href="" class="flex items-center gap-2">
			<!-- icon logo -->
			<div class="h-10 w-10 bg-aquamarine"></div>
			<span class="text-lg font-semibold md:text-2xl"> GisaWebDev</span>
		</a>
		<div class="flex items-center gap-4">
			<div class="icon flex gap-1">
				<ToolsIcon />
				<a href="" class="hidden font-semibold sm:block">Tools</a>
			</div>
			<!-- icon dark mode -->
			{
				SITE.lightAndDarkMode && (
					<button
						class="flex items-center"
						id="theme-btn"
						title="Toggles light & dark"
						aria-label="auto"
						aria-live="polite"
					>
						<MoonIcon id="moon-icon" />
						<SunIcon id="sun-icon" />
					</button>
				)
			}
		</div>
	</div>
</header>
