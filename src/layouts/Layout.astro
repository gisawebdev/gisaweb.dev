---
import '@fontsource/noto-sans-mono/400.css';
import '@fontsource/noto-sans-mono/600.css';
import '@fontsource/noto-sans-mono/700.css';
import '../global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content="Blog de desarrollo web" />
		<meta
			name="keywords"
			content="programacion, desarrollo, javascript, typescript, css, gisawebdev"
		/>
		<meta name="author" content="Gilbert Acosta" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@gisawebdev" />
		<meta name="twitter:creator" content="@gisawebdev" />
		<meta name="twitter:title" content="gisawebdev: Blog de desarrollo web" />
		<meta name="twitter:description" content="Blog de desarrollo web" />
		<!-- <meta name='twitter:image' content={ogImage} /> -->
		<!-- <meta name='og:image' content={ogImage} /> -->
		<meta name="og:title" content="gisawebdev: Blog de desarrollo web" />
		<meta name="og:description" content="Blog de desarrollo web" />
		<!-- <meta name='og:url' content='https://gisaweb.dev' /> -->
		<meta name="og:site_name" content="gisawebdev" />
		<meta name="og:type" content="website" />
		<meta name="og:locale" content="es_ES" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<title>{title}</title>

		<script is:inline src="/toggle-theme.js"></script>
	</head>
	<body>
		<main class="center">
			<slot />
		</main>
	</body>
</html>
